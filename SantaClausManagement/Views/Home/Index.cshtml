@{
    ViewBag.Title = "Home Page Ziggy";
}

@using SantaClausManagement.Models
@model HomeIndexViewModel

@Scripts.Render("~/Scripts/Custom/modal.js")

<div class="container-fluid">
    <div class="col-md-6 table-responsive">
        <div class="table-style">
            <h2 class="text-center">Kids's requests</h2>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Details</th>
                        <th>Child Name</th>
                        <th>Request Date</th>
                        <th>Status Request</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <td>
                                <span id="modal-details-@item.Id" class="glyphicon glyphicon-search lens-icon" aria-hidden="true" data-toggle="modal" data-target="#requestDetail" onclick="modal($('#modal-details-@item.Id').attr('data-order-id'))" data-order-id="@item.Id"></span>
                            </td>
                            <td>@item.Kid</td>
                            <td>@item.RequestDate.ToShortDateString()</td>
                            <td>@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6 table-responsive ">
        <div class="table-style">
            <h2 class="text-center">Toys' Storage</h2>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Toy Name</th>
                        <th>Price</th>
                        <th>Total amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Toys)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Cost</td>
                            <td>@item.Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="requestDetail" tabindex="-1" role="dialog" aria-labelledby="requestLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-center" id="requestLabel">Request Detail</h4>
            </div>
            <div class="modal-body">
                <form class="detail-request">
                    <ul class="detail-list">
                        <li id="modal-childName">Child Name:</li>
                        <li id="modal-requestDate">Request Date:</li>
                        <li>
                            <div>
                                <p class="flex">
                                    Status Request:<select class="form-control select">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                    </select>
                                </p>
                            </div>

                        </li>
                        <li>Toys' list:
                            <ul id="modal-toysList"></ul>
                        </li>
                    </ul>
                    <div class="flex flex-center">
                        <button type="submit" class="btn btn-default btn-login" style="margin:0 auto;">Change status</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>