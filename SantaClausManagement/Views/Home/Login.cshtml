@{
    ViewBag.Title = "Login";
}

@using SantaClausManagement.Models
@model LoginViewModel

<div class="container">
    <div class="login">
        <div style="width: 300px;">
            <h1 class="text-center">Login</h1>
            <h2 class="text-danger">@ViewBag.Error</h2>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { id = "emailAddress", type = "email", @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password, new { id = "InputPassword", @class = "form-control", placeholder = "Password" })
                </div>
                <div class="flex flex-center">
                    <button type="submit" class="btn btn-default btn-login" style="margin:0 auto;">Login</button>
                </div>
            }
        </div>
    </div>
</div>

